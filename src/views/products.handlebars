
<div>
  <script type="module" src="/js/products.js"></script>

  <h1>Todos los productos</h1>
  <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody id="dinamic-product-list">
            {{#each p}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>
                <button class="btn-add" type="button" value="{{this.id}}">agregar al carrito</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
  
    <hr />
    <hr />

    {{prevPage}}
    {{#if hasPrevPage}}
      <a href="{{prevLink}}">⬅️</a>
    {{/if}}
    {{page}}
    {{#if hasNextPage}}
      <a href="{{nextLink}}">➡️</a>
    {{/if}}
    {{nextPage}}
  </div>
</div>


        